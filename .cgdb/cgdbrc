set arrowstyle=long #  ‘long’, and ‘highlight’
set autosourcereload
set ignorecase
set winminheight=2
set wrapscan
set tabstop=4
set winsplit=top_big
set showtgdbcommands
hi SelectedLineNr cterm=reverse ctermfg=Yellow ctermbg=Black
map 1 :set<Space>winsplit=even<Cr>
map 2 :set<Space>winsplit=top_big<Cr>
map 3 :set<Space>winsplit=bottom_big<Cr>

