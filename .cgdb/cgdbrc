set arrowstyle=long #  ‘long’, and ‘highlight’
set autosourcereload
set ignorecase
set winminheight=2
set wrapscan
set tabstop=4
set showtgdbcommands

###############################################################################
# When enabled, if there is a previous search pattern, highlight all its
# matches. The default is disabled.
###############################################################################
set hlsearch

###############################################################################
# Set the split point between source and GDB window. This is especially useful
# as an init setting in your cgdbrc file. See Configuring CGDB. The possible
# values for style are ‘src_full’, ‘src_big’, ‘even’, ‘gdb_big’, and ‘gdb_full’
###############################################################################
# Set the split point between source and GDB window. This is especially useful
set winsplit=top_big
map 1 :set<Space>winsplit=top_big<Cr>
map 2 :set<Space>winsplit=even<Cr>
map 3 :set<Space>winsplit=bottom_big<Cr>

###############################################################################
# COLOR NAME                          NR-16    NR-8    NR-8 bold attribute
# Black                                  0       0            No
# DarkBlue                               1       4            No
# DarkGreen                              2       2            No
# DarkCyan                               3       6            No
# DarkRed                                4       1            No
# DarkMagenta                            5       5            No
# Brown, DarkYellow                      6       3            No
# LightGray, LightGrey, Gray, Grey       7       7            No
# DarkGray, DarkGrey                     8       0           Yes
# Blue, LightBlue                        9       4           Yes
# Green, LightGreen                     10       2           Yes
# Cyan, LightCyan                       11       6           Yes
# Red, LightRed                         12       1           Yes
# Magenta, LightMagenta                 13       5           Yes
# Yellow, LightYellow                   14       3           Yes
# White                                 15       7           Yes
###############################################################################
hi SelectedLineNr cterm=reverse ctermfg=Yellow ctermbg=Black
